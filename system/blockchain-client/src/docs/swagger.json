{
    "swagger": "2.0",
    "info": {
        "description": "API to verify zkSNARK proofs on Solana blockchain",
        "title": "Digital Identity System - Blockchain Client",
        "contact": {},
        "version": "1.0"
    },
    "host": "localhost:9000",
    "basePath": "/bc/v1",
    "paths": {
        "/internal/verify": {
            "get": {
                "description": "Retrieves transaction and account data from Solana, extracts zkSNARK proof and verifies it",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "zkSNARK"
                ],
                "summary": "Verify zkSNARK proof from Solana account",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Transaction signature",
                        "name": "signature",
                        "in": "query",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "Account public key",
                        "name": "account",
                        "in": "query",
                        "required": true
                    },
                    {
                        "type": "integer",
                        "description": "Proof size in bytes",
                        "name": "size",
                        "in": "query",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successfully verified proof",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "400": {
                        "description": "Invalid request: missing parameters",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    },
                    "404": {
                        "description": "Transaction or account not found",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    },
                    "422": {
                        "description": "Could not parse input",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    },
                    "500": {
                        "description": "Internal server error or verification failed",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        }
    }
}