{
  "vhosts": [
    {
      "name": "/"
    }
  ],
  "users": [
    {
      "name": "admin",
      "password": "admin",
      "tags": "administrator"
    },
    {
      "name": "guest",
      "password": "guest",
      "tags": "administrator"
    },
    {
      "name": "verifier_mock",
      "password": "verifier_mock",
      "tags": "verifier"
    },
    {
      "name": "id_system_api",
      "password": "id_system_api",
      "tags": "digital_identity"
    },
    {
      "name": "id_system_blockchain",
      "password": "id_system_blockchain",
      "tags": "digital_identity"
    }
  ],
  "permissions": [
    {
      "user": "admin",
      "vhost": "/",
      "configure": ".*",
      "write": ".*",
      "read": ".*"
    },
    {
      "user": "guest",
      "vhost": "/",
      "configure": ".*",
      "write": ".*",
      "read": "^logs\\.guest$"
    },
    {
      "user": "verifier_mock",
      "vhost": "/",
      "configure": "^unverified(\\.(.+))?$",
      "write": "^verifiers$|verifiers\\.verified\\..*",
      "read": "verifiers\\.unverified\\..*"
    },
    {
      "user": "id_system_api",
      "vhost": "/",
      "configure": "^$",
      "write": "verifiers\\..*|log_audit",
      "read": "identity|proof\\.(results|failures)|logs\\.api"
    },
    {
      "user": "id_system_blockchain",
      "vhost": "/",
      "configure": "^$",
      "write": "identity|log_audit",
      "read": "verified\\.(positive|negative)|logs\\.blockchain"
    }
  ],
  "exchanges": [
    {
      "name": "verifiers",
      "vhost": "/",
      "type": "topic",
      "durable": true,
      "auto_delete": false,
      "internal": false,
      "arguments": {}
    },
    {
      "name": "identity",
      "vhost": "/",
      "type": "direct",
      "durable": true,
      "auto_delete": false,
      "internal": false,
      "arguments": {}
    },
    {
      "name": "log_audit",
      "vhost": "/",
      "type": "fanout",
      "durable": true,
      "auto_delete": false,
      "internal": false,
      "arguments": {}
    }
  ],
  "queues": [
    {
      "name": "unverified",
      "vhost": "/",
      "durable": true,
      "auto_delete": false,
      "arguments": {}
    },
    {
      "name": "verified.positive",
      "vhost": "/",
      "durable": true,
      "auto_delete": false,
      "arguments": {}
    },
    {
      "name": "verified.negative",
      "vhost": "/",
      "durable": true,
      "auto_delete": false,
      "arguments": {}
    },
    {
      "name": "proof.results",
      "vhost": "/",
      "durable": true,
      "auto_delete": false,
      "arguments": {}
    },
    {
      "name": "proof.failures",
      "vhost": "/",
      "durable": true,
      "auto_delete": false,
      "arguments": {}
    },
    {
      "name": "logs.blockchain",
      "vhost": "/",
      "durable": false,
      "auto_delete": true,
      "arguments": {
        "x-message-ttl": 3600000,
        "x-expires": 3600000
      }
    },
    {
      "name": "logs.api",
      "vhost": "/",
      "durable": false,
      "auto_delete": true,
      "arguments": {
        "x-message-ttl": 3600000,
        "x-expires": 3600000
      }
    },
    {
      "name": "logs.guest",
      "vhost": "/",
      "durable": false,
      "auto_delete": true,
      "arguments": {
        "x-message-ttl": 3600000,
        "x-expires": 3600000
      }
    },
    {
      "name": "logs.admin",
      "vhost": "/",
      "durable": false,
      "auto_delete": true,
      "arguments": {
        "x-message-ttl": 3600000,
        "x-expires": 3600000
      }
    }
  ],
  "bindings": [
    {
      "source": "verifiers",
      "vhost": "/",
      "destination": "unverified",
      "destination_type": "queue",
      "routing_key": "",
      "arguments": {}
    },
    {
      "source": "verifiers",
      "vhost": "/",
      "destination": "verified.positive",
      "destination_type": "queue",
      "routing_key": "positive",
      "arguments": {}
    },
    {
      "source": "verifiers",
      "vhost": "/",
      "destination": "verified.negative",
      "destination_type": "queue",
      "routing_key": "negative",
      "arguments": {}
    },
    {
      "source": "identity",
      "vhost": "/",
      "destination": "proof.results",
      "destination_type": "queue",
      "routing_key": "proof.results",
      "arguments": {}
    },
    {
      "source": "identity",
      "vhost": "/",
      "destination": "proof.failures",
      "destination_type": "queue",
      "routing_key": "proof.failures",
      "arguments": {}
    },
    {
      "source": "log_audit",
      "vhost": "/",
      "destination": "logs.blockchain",
      "destination_type": "queue",
      "routing_key": "",
      "arguments": {}
    },
    {
      "source": "log_audit",
      "vhost": "/",
      "destination": "logs.api",
      "destination_type": "queue",
      "routing_key": "",
      "arguments": {}
    },
    {
      "source": "log_audit",
      "vhost": "/",
      "destination": "logs.guest",
      "destination_type": "queue",
      "routing_key": "",
      "arguments": {}
    },
    {
      "source": "log_audit",
      "vhost": "/",
      "destination": "logs.admin",
      "destination_type": "queue",
      "routing_key": "",
      "arguments": {}
    }
  ]
}